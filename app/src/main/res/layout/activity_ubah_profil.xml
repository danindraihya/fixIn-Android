<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ubah_profil">

    <RelativeLayout
        android:id="@+id/layAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/panah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@drawable/forback"></ImageView>
        <ImageView
            android:id="@+id/fotopro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/man"
            android:layout_toRightOf="@+id/panah"
            android:layout_below="@+id/panah"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30dp"></ImageView>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layAtas">
            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="25dp"></TextView>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nama"
                android:background="@android:color/black"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="30sp"></View>

            <TextView
                android:id="@+id/nomorponsel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Ponsel"
                android:layout_below="@+id/line1"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"></TextView>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nomorponsel"
                android:background="@android:color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"></View>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Email"
                android:layout_below="@+id/line2"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"></TextView>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/email"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"></View>

            <TextView
                android:id="@+id/teks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat komunikasi yang berkaitan dengan Fix-In akan dikirim ke alamat email anda."
                android:textSize="20dp"
                android:layout_below="@+id/line3"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textAlignment="center"></TextView>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect1"
                android:layout_below="@+id/teks"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="UBAH"
                android:textSize="20dp"
                android:textColor="@android:color/white"></Button>
        </RelativeLayout>



</RelativeLayout>