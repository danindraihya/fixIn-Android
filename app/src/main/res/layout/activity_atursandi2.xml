<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2255"
    android:orientation="vertical"
    tools:context=".atursandi2">

    <ImageView
        android:id="@+id/logoAturSandi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/spaceAturSandi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvAturSandi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Atur ulang kata sandi"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/logoAturSandi2"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi2"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi2"
        app:layout_constraintTop_toTopOf="@id/logoAturSandi2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/usernameAturSandi2"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:hint="\t username"
        android:textColorHint="#DCDCDC"
        android:background="@drawable/rec1"
        android:drawableLeft="@drawable/logo_user"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@id/spaceAturSandi2"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi2"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi2"
        app:layout_constraintTop_toBottomOf="@id/tvAturSandi2"

        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/passwordAturSandi2"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:hint="\t password baru"
        android:textColorHint="#DCDCDC"
        android:background="@drawable/rec1"
        android:drawableLeft="@drawable/logo_password"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/spaceAturSandi2"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi2"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi2"
        app:layout_constraintTop_toBottomOf="@id/usernameAturSandi2"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/passwordConfAturSandi2"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rec1"
        android:drawableLeft="@drawable/logo_password"
        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="\t ulang password"
        android:textColorHint="#DCDCDC"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi2"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi2"
        app:layout_constraintTop_toBottomOf="@id/passwordAturSandi2"
        app:layout_constraintBottom_toTopOf="@id/spaceAturSandi2"
        />

    <Button
        android:id="@+id/buttonAturSandi2"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rec2"
        android:text="Atur Ulang"
        app:layout_constraintBottom_toTopOf="@id/spaceAturSandi2"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi2"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi2"
        app:layout_constraintTop_toBottomOf="@id/passwordConfAturSandi2"
        app:layout_constraintVertical_bias="0.0" />

    <Space
        android:id="@+id/spaceAturSandi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

    </Space>


</androidx.constraintlayout.widget.ConstraintLayout>