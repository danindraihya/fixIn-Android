<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/navatas"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/navatas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ban"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="navatas"
        app:layout_constraintEnd_toEndOf="@id/navatas"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@id/navatas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04">

    </TextView>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layanan Fix-in terkait berbagai "
        android:textColor="#FFF"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@id/navatas"
        app:layout_constraintEnd_toEndOf="@id/navatas"
        app:layout_constraintStart_toStartOf="@id/navatas"
        app:layout_constraintTop_toTopOf="@id/navatas">


    </TextView>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:text="permasalahan pada ban"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@id/navatas"
        app:layout_constraintEnd_toEndOf="@id/navatas"
        app:layout_constraintStart_toStartOf="@id/navatas"
        app:layout_constraintTop_toTopOf="@id/navatas">


    </TextView>

    <LinearLayout
        android:id="@+id/pompabiasa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Pompa Ban Biasa"
            android:textColor="#000"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@id/pompabiasa"
            app:layout_constraintEnd_toEndOf="@id/pompabiasa"
            app:layout_constraintStart_toStartOf="@id/pompabiasa"
            app:layout_constraintTop_toTopOf="@id/pompabiasa">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="8dp"
                android:text="Mulai dari 1.000,00"
                android:textColor="#000"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pompabiasa"
                app:layout_constraintEnd_toEndOf="@id/pompabiasa"
                app:layout_constraintStart_toStartOf="@id/pompabiasa"
                app:layout_constraintTop_toTopOf="@id/pompabiasa">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_weight="0"
                android:text="Lihat Bengkel"
                android:textColor="#000"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pompabiasa"
                app:layout_constraintEnd_toEndOf="@id/pompabiasa"
                app:layout_constraintStart_toStartOf="@id/pompabiasa"
                app:layout_constraintTop_toTopOf="@id/pompabiasa">

            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="100"
                android:background="@drawable/arrow">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="500dp"
        android:layout_height="5dp"
        app:srcCompat="@drawable/divider"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="145dp" />

    <LinearLayout
        android:id="@+id/pompabannitrogenmotor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Pompa Ban Nitrogen Motor"
            android:textColor="#000"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@id/pompabannitrogenmotor"
            app:layout_constraintEnd_toEndOf="@id/pompabannitrogenmotor"
            app:layout_constraintStart_toStartOf="@id/pompabannitrogenmotor"
            app:layout_constraintTop_toTopOf="@id/pompabannitrogenmotor">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="8dp"
                android:text="Mulai dari 5.000,00"
                android:textColor="#000"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pompabannitrogenmotor"
                app:layout_constraintEnd_toEndOf="@id/pompabannitrogenmotor"
                app:layout_constraintStart_toStartOf="@id/pompabannitrogenmotor"
                app:layout_constraintTop_toTopOf="@id/pompabannitrogenmotor">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_weight="0"
                android:text="Lihat Bengkel"
                android:textColor="#000"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pompabannitrogenmotor"
                app:layout_constraintEnd_toEndOf="@id/pompabannitrogenmotor"
                app:layout_constraintStart_toStartOf="@id/pompabannitrogenmotor"
                app:layout_constraintTop_toTopOf="@id/pompabannitrogenmotor">

            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="100"
                android:background="@drawable/arrow">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="500dp"
        android:layout_height="5dp"
        app:srcCompat="@drawable/divider"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="195dp" />

    <LinearLayout
        android:id="@+id/pompabannitrogenmobil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Pompa Ban Nitrogen Mobil"
            android:textColor="#000"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@id/pompabannitrogenmobil"
            app:layout_constraintEnd_toEndOf="@id/pompabannitrogenmobil"
            app:layout_constraintStart_toStartOf="@id/pompabannitrogenmobil"
            app:layout_constraintTop_toTopOf="@id/pompabannitrogenmobil">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="8dp"
                android:text="Mulai dari 10.000,00"
                android:textColor="#000"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pompabannitrogenmobil"
                app:layout_constraintEnd_toEndOf="@id/pompabannitrogenmobil"
                app:layout_constraintStart_toStartOf="@id/pompabannitrogenmobil"
                app:layout_constraintTop_toTopOf="@id/pompabannitrogenmobil">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="195dp"
                android:layout_weight="0"
                android:text="Lihat Bengkel"
                android:textColor="#000"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pompabannitrogenmobil"
                app:layout_constraintEnd_toEndOf="@id/pompabannitrogenmobil"
                app:layout_constraintStart_toStartOf="@id/pompabannitrogenmobil"
                app:layout_constraintTop_toTopOf="@id/pompabannitrogenmobil">

            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="100"
                android:background="@drawable/arrow">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="500dp"
        android:layout_height="5dp"
        app:srcCompat="@drawable/divider"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="245dp" />


</androidx.constraintlayout.widget.ConstraintLayout>