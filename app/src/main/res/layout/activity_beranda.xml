<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2255"
    android:orientation="vertical"
    tools:context=".ActivityBeranda">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        >

        <ImageView
            android:id="@+id/pagi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@id/jarakCons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13"
            app:srcCompat="@drawable/pagi" />

        <Space
            android:id="@+id/jarakCons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pagi"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/input_stnk"
            android:drawableLeft="@drawable/button_search"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/pagi"
            app:layout_constraintStart_toStartOf="@id/pagi"
            app:layout_constraintTop_toTopOf="@id/pagi"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:paddingBottom="2.5dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            ></Space>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonBan"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/ban" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Ban"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAksesoris"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/aksesoris" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Aksesoris" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

<!--            3-->

            <Button
                android:id="@+id/buttonAki"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/aki" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Aki" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

<!--            4-->

            <Button
                android:id="@+id/buttonLainLain"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/lainlain" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Lain-lain" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            ></Space>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginTop="2.5dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            ></Space>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMekanik"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/mekanik" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Mekanik" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonOli"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/oli" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Oli" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonCuci"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/cuci" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Cuci" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSparepart"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/sparepart" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="Sparepart" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            ></Space>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="0.3"
        android:background="@drawable/rekomendasibengkel" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/recyclerView"
        android:orientation="horizontal" >


    </androidx.recyclerview.widget.RecyclerView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#FFFFFFFF"
        />


</LinearLayout>