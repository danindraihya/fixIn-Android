<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2255"
    android:orientation="vertical"
    tools:context=".berhasilAtur">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.6"
        app:srcCompat="@drawable/logof" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:text="Berhasil !"
        android:textColor="#FFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.3"
        android:gravity="center_horizontal"
        android:text="Hore ! kini sandi kamu telah di atur ulang. Yuk, masuk dengan sandi baru kamu :)"
        android:textColor="#FFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="286dp"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rec2"
        android:text="Login" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        ></Space>
</LinearLayout>