<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2255"
    android:orientation="vertical"
    tools:context=".aturSandi">

    <ImageView
        android:id="@+id/logoAturSandi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:layout_constraintBottom_toTopOf="@id/spaceAturSandi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur ulang kata sandi"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/logoAturSandi"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi"
        app:layout_constraintTop_toTopOf="@id/logoAturSandi"
        app:layout_constraintVertical_bias="0.47000003" />
    <!-- 286 -->
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rec1"
        android:drawableLeft="@drawable/logo_email"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@id/logoAturSandi"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi"
        app:layout_constraintTop_toTopOf="@id/logoAturSandi"
        app:layout_constraintVertical_bias="0.58000004" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rec2"
        android:text="Lanjutkan"
        app:layout_constraintBottom_toBottomOf="@id/logoAturSandi"
        app:layout_constraintEnd_toEndOf="@id/logoAturSandi"
        app:layout_constraintStart_toStartOf="@id/logoAturSandi"
        app:layout_constraintTop_toTopOf="@id/logoAturSandi"
        app:layout_constraintVertical_bias="0.68" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/spaceAturSandi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoAturSandi"

        />


</androidx.constraintlayout.widget.ConstraintLayout>